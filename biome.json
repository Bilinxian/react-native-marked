{
	"$schema": "https://biomejs.dev/schemas/1.2.2/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noRenderReturnValue": "off"
			}
		}
	},
	"formatter": {
		"enabled": true
	},
	"files": {
		"ignore": ["node_modules/", "coverage/", "dist/"]
	}
}
