{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noRenderReturnValue": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "info"
			}
		}
	},
	"formatter": {
		"enabled": true
	},
	"files": {
		"ignore": ["node_modules/", "coverage/", "dist/"]
	},
	"javascript": {
		"jsxRuntime": "reactClassic"
	}
}
